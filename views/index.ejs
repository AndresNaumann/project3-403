<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />

    <title>Home</title>
    <style>
      /* Add custom CSS */
    </style>
  </head>
  <body>
    <!--Navbar Start-->

    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
      <a class="navbar-brand" href="/">LangLearn</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Log in
            </a>
            <div
              class="dropdown-menu dropdown-menu-right"
              aria-labelledby="navbarDropdown"
            >
              <a class="dropdown-item" href="/login">Log in</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Help</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <!--Navbar End-->

    <!--Chat Start-->

    <div class="form-container">
      <div class="header-container">
        <h3 id="dynamicHeader"></h3>
      </div>
      <form method="post" action="/ask">
        <textarea
          name="input"
          id="input"
          placeholder="Type your text here"
        ></textarea>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <br />
      <p id="fadeTranslation"></p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!--Fade in a nd out scripts-->

    <script>
      const dynamicHeader = document.getElementById("dynamicHeader");
      const fadeTranslation = document.getElementById("fadeTranslation");

      // Text for the H3 tag
      const wtText = "<%= wT %>";
      const englishTranslation = "<%= EnglishTranslation %>";

      // Function to type out the text
      function typeText(text, element, speed = 50) {
        let i = 0;
        const typingEffect = setInterval(function () {
          if (i < text.length) {
            element.innerHTML += text.charAt(i);
            i++;
          } else {
            clearInterval(typingEffect);
            // Change the color to grey and set the translation text
            fadeTranslation.style.color = "#555"; // Set to grey
            fadeTranslation.innerHTML = englishTranslation;
          }
        }, speed);
      }

      // Start typing out the text when the page loads
      window.onload = function () {
        typeText(wtText, dynamicHeader);
      };

      document.getElementById("input").focus();
    </script>
  </body>
</html>
